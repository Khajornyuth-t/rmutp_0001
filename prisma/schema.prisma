// prisma/schema.prisma

// JavaScript client
generator js_client {
  provider = "prisma-client-js"
  output   = "../generated/prisma/js"  // แยกใส่ js folder
}

// Python client  
generator py_client {
  provider = "prisma-client-py"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id        Int    @id @default(autoincrement())
  username  String
  password  String
  mobile    String
  cardId    String
}